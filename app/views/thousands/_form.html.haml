= form_for @thousand do |f|
  - if @thousand.errors.any?
    #error_explanation
      %h2= "#{pluralize(@thousand.errors.count, "error")} prohibited this thousand from being saved:"
      %ul
        - @thousand.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :num
    = f.number_field :num
  .actions
    = f.submit 'Save'
